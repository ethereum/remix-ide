{
  "name": "browser-solidity",
  "version": "1.0.0",
  "description": "Minimalistic browser-based Solidity IDE",
  "scripts": {
    "test": "node test/index.js",
    "browser-test": "nightwatch --env local",
    "browser-test-sc": "nightwatch --env remote",
    "build": "mkdir -p build; browserify src/index.js -o build/app.js",
    "lint": "semistandard",
    "serve": "http-server ."
  },
  "devDependencies": {
    "brace": "^0.8.0",
    "browserify": "^13.0.0",
    "es6-shim": "^0.35.1",
    "ethereumjs-abi": "^0.6.2",
    "ethereumjs-block": "^1.2.2",
    "ethereumjs-tx": "^1.1.1",
    "ethereumjs-util": "^4.4.0",
    "ethereumjs-vm": "^1.4.0",
    "http-server": "0.9.0",
    "jquery": "^2.2.0",
    "js-base64": "^2.1.9",
    "nightwatch": "^0.9.3",
    "semistandard": "^7.0.0",
    "solc": "^0.3.5",
    "tape": "^4.5.1",
    "web3": "^0.15.3",
    "webworkify": "^1.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum/browser-solidity.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "compiler"
  ],
  "author": "chriseth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ethereum/browser-solidity/issues"
  },
  "homepage": "https://github.com/ethereum/browser-solidity#readme",
  "private": true,
  "semistandard": {
    "ignore": [
      "assets/js/",
      "build/",
      "src/mode-solidity.js"
    ]
  }
}
